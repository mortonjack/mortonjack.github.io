---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
//import Counter from "@components/Counter.astro";
//import counter from "@content/counter.json";
import { homepage } from "@content/homepage"; 
import Features from "@components/Features.astro";
---

<Layout>
  <section class="grid py-10 place-items-center text-center">
    <h1 class="text-5xl font-bold mb-5">Jack Morton</h1>
    <p class="dark:text-zinc-300">I'm an aspiring software engineer studying a Bachelor of Computer Science (Advanced) at
      the University of Adelaide. I use they/them pronouns. Check out some of my projects below!
    </p>
  </section>
  {homepage.map((homepage) => 
    <a class="col-span-3 flex flex-col gap-2 sm:gap-4 p-5 my-2 hover:dark:bg-zinc-800 hover:bg-zinc-200 rounded-lg" href={homepage.link}>
      <Features title={homepage.title} icon={homepage.icon} content={homepage.content}/>
    </a>
  )}
